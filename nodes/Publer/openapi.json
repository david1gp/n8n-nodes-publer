    "/api/v1/media/from-url": {
      "post": {
        "tags": [
          "MEDIA"
        ],
        "summary": "Upload from url",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["media", "type"],
                "properties": {
                  "media": {
                    "type": "array",
                    "description": "List of media URLs and metadata",
                    "items": {
                      "type": "object",
                      "required": ["url", "name"],
                      "properties": {
                        "url": {
                          "type": "string",
                          "description": "URL of the media file to download"
                        },
                        "name": {
                          "type": "string",
                          "description": "Custom name for the media file"
                        },
                        "caption": {
                          "type": "string",
                          "description": "Caption for the media"
                        },
                        "source": {
                          "type": "string",
                          "description": "Source attribution"
                        }
                      }
                    }
                  },
                  "type": {
                    "type": "string",
                    "enum": ["single", "bulk", "thumbnail"],
                    "description": "Upload type",
                    "example": "single"
                  },
                  "direct_upload": {
                    "type": "boolean",
                    "description": "Whether to upload directly to S3 cloud, slower but returns id",
                    "default": false,
                    "example": false
                  },
                  "in_library": {
                    "type": "boolean",
                    "description": "Whether to save to media library",
                    "default": false,
                    "example": true
                  }
                }
              }
            }
          }
        },
        "parameters": [
          {
            "name": "Publer-Workspace-Id",
            "in": "header",
            "schema": {
              "type": "string"
            },
            "example": "{{workspace_id}}"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {}
            }
          }
        }
      }
    },
